{%- style -%}
  .cc-instructions-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 500px;
    height: 75vh;
    padding: 50px;
    text-align: center;
  }

  .cc-instructions-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    max-width: 800px;
    width: 100%;
  }

  .cc-instructions-image {
    width: 100%;
    max-width: 200px;
    height: auto;
    display: block;
  }

  .cc-instructions-text {
    font-size: 16px;
    line-height: 1.6;
    color: inherit;
  }

  .cc-instructions-text a {
    color: inherit;
    text-decoration: underline;
  }

  .cc-instructions-text a:hover {
    opacity: 0.8;
  }

  .cc-instructions-logo {
    max-width: 150px;
    width: 100%;
    height: auto;
    display: block;
  }

  .cc-instructions-logo-link {
    display: inline-block;
    text-decoration: none;
  }

  .cc-instructions-logo-link:hover {
    opacity: 0.9;
  }

  @media screen and (max-width: 768px) {
    .cc-instructions-container {
      padding: 20px 15px;
    }

    .cc-instructions-text {
      font-size: 14px;
    }
  }
{%- endstyle -%}
