<style>
.gradient-shader-hero {
  position: relative;
  width: 100%;
  min-height: 80vh;
  overflow: hidden;
  background-color: #f9f9f9;
}

.gradient-shader-hero__canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  cursor: pointer;
}

/* Image Background */
.gradient-shader-hero__image-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.gradient-shader-hero__image-bg-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.gradient-shader-hero__image-bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.gradient-shader-hero__content {
  position: relative;
  z-index: 1;
  width: 100%;
  min-height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.gradient-shader-hero__container {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  max-width: 90rem;
  margin: 0 auto;
}

.gradient-shader-hero__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 3rem;
  align-items: center;
  width: 100%;
}

@media screen and (min-width: 750px) {
  .gradient-shader-hero__grid {
    grid-template-columns: 1fr 1fr;
  }
}

/* Centered layout when no image column */
.gradient-shader-hero__grid--single {
  grid-template-columns: 1fr;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.gradient-shader-hero--centered .gradient-shader-hero__badge {
  margin-left: auto;
  margin-right: auto;
}

.gradient-shader-hero--centered .gradient-shader-hero__text-column {
  align-items: center;
}

.gradient-shader-hero--centered .gradient-shader-hero__heading,
.gradient-shader-hero--centered .gradient-shader-hero__description,
.gradient-shader-hero--centered .gradient-shader-hero__feature-title,
.gradient-shader-hero--centered .gradient-shader-hero__feature-subtitle {
  text-align: center;
}

.gradient-shader-hero--centered .gradient-shader-hero__description {
  margin-left: auto;
  margin-right: auto;
}

.gradient-shader-hero--centered .gradient-shader-hero__features {
  align-items: center;
}

.gradient-shader-hero--centered .gradient-shader-hero__feature-item {
  flex-direction: column;
  align-items: center;
}

.gradient-shader-hero--centered .gradient-shader-hero__feature-dot {
  margin-top: 0;
  margin-bottom: 0.5rem;
}

.gradient-shader-hero--centered .gradient-shader-hero__button-wrapper {
  display: flex;
  justify-content: center;
}

/* Text Column */
.gradient-shader-hero__text-column {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 1;
}

/* Badge - inline-block px-4 py-2 bg-white/90 backdrop-blur-sm rounded-full shadow-lg */
.gradient-shader-hero__badge {
  display: inline-block;
  width: fit-content;
  padding: 0.5rem 1rem;
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  border-radius: 9999px;
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
}

.gradient-shader-hero__badge--no-shadow {
  box-shadow: none;
}

.gradient-shader-hero__button--no-shadow {
  box-shadow: none !important;
}

.gradient-shader-hero__image-container--no-shadow {
  box-shadow: none !important;
}

.gradient-shader-hero__floating-badge--no-shadow {
  box-shadow: none !important;
}

/* Badge text */
.gradient-shader-hero__badge p {
  margin: 0;
  font-size: 0.9375rem;
  line-height: 1.375rem;
}

/* Text content */
.gradient-shader-hero__text-content {
  display: flex;
  flex-direction: column;
}

/* Heading - text-5xl md:text-6xl font-bold */
.gradient-shader-hero__heading {
  font-size: 3rem;
  line-height: 1;
  font-weight: 700;
  margin: 0;
}

@media screen and (min-width: 750px) {
  .gradient-shader-hero__heading {
    font-size: 3.75rem;
  }
}

.gradient-shader-hero__heading-accent {
  font-style: italic;
}

/* Description - max-w-lg */
.gradient-shader-hero__description {
  max-width: 32rem;
  line-height: 1.5;
  font-size: 1.0625rem;
}

.gradient-shader-hero__description p {
  margin: 0;
}

/* Features */
.gradient-shader-hero__features {
  display: flex;
  flex-direction: column;
}

/* Feature item - flex items-start gap-3 */
.gradient-shader-hero__feature-item {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
}

/* Feature dot - w-1.5 h-1.5 rounded-full bg-yellow-400 mt-2 */
.gradient-shader-hero__feature-dot {
  width: 0.375rem;
  height: 0.375rem;
  border-radius: 9999px;
  background-color: oklch(0.852 0.199 91.936); /* yellow-400 */
  flex-shrink: 0;
  margin-top: 0.5rem;
}

/* Feature title */
.gradient-shader-hero__feature-title {
  margin: 0;
  font-size: 1rem;
  line-height: 1.5;
}

/* Feature subtitle */
.gradient-shader-hero__feature-subtitle {
  margin: 0;
  margin-top: 0.25rem;
  font-size: 0.9375rem;
  line-height: 1.375rem;
}

/* Button - bg-black text-white hover:bg-black/90 rounded-full px-8 py-6 text-base gap-3 shadow-2xl */
.gradient-shader-hero__button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  padding: 1.5rem 2rem;
  background-color: #000;
  color: #fff;
  font-size: 1rem;
  line-height: 1.5;
  font-weight: 500;
  border-radius: 9999px;
  text-decoration: none;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  transition: background-color 0.15s cubic-bezier(0.4, 0, 0.2, 1);
}

.gradient-shader-hero__button:hover {
  background-color: rgba(0, 0, 0, 0.9);
}

/* Button icon - size-5 */
.gradient-shader-hero__button-icon {
  width: 1.25rem;
  height: 1.25rem;
  flex-shrink: 0;
}

/* Image Column */
.gradient-shader-hero__image-column {
  position: relative;
  z-index: 1;
}

/* Image wrapper with animation - initial opacity 0, scale 0.95, animates to opacity 1, scale 1 over 0.8s with 0.2s delay */
.gradient-shader-hero__image-wrapper {
  position: relative;
  opacity: 0;
  transform: scale(0.95);
  animation: fadeInScale 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s forwards;
}

@keyframes fadeInScale {
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* Image container - relative overflow-hidden rounded-3xl shadow-2xl */
.gradient-shader-hero__image-container {
  position: relative;
  overflow: hidden;
  border-radius: 1.5rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  margin: 0 auto;
}

/* Image - w-full h-[600px] object-cover */
.gradient-shader-hero__image {
  width: 100%;
  height: 600px;
  object-fit: cover;
  display: block;
}

.gradient-shader-hero__image-placeholder {
  width: 100%;
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.05);
}

/* Image overlay - absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent */
.gradient-shader-hero__image-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent, transparent);
  pointer-events: none;
  border-radius: inherit;
}

/* Floating badge - absolute -bottom-6 -left-6 bg-white rounded-2xl p-6 shadow-2xl */
.gradient-shader-hero__floating-badge {
  position: absolute;
  bottom: -1.5rem;
  left: -1.5rem;
  background-color: #fff;
  border-radius: 1rem;
  padding: 1.5rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
}

/* Stat label - text-sm text-black/60 mb-1 */
.gradient-shader-hero__stat-label {
  margin: 0 0 0.25rem 0;
  font-size: 0.9375rem;
  line-height: 1.375rem;
  color: rgba(0, 0, 0, 0.6);
}

/* Stat value - text-black font-weight normal */
.gradient-shader-hero__stat-value {
  margin: 0;
  font-size: 1.0625rem;
  line-height: 1.5;
  color: #000;
}

/* Mobile adjustments */
@media screen and (max-width: 749px) {
  .gradient-shader-hero__heading {
    font-size: 2.5rem;
  }
  
  .gradient-shader-hero__image {
    height: 500px;
  }
  
  .gradient-shader-hero__image-placeholder {
    height: 500px;
  }
  
  .gradient-shader-hero__floating-badge {
    bottom: 1rem;
    left: 1rem;
  }
}
</style>

{%- liquid
  assign cc_handle = cart.attributes['cc-creator-handle']
  assign cc_preview_creator = section.settings.preview_creator

  assign cc_creator = metaobject | default: metaobjects.creator[cc_handle]
  if cc_creator == blank and request.design_mode
    assign cc_creator = cc_preview_creator
  endif
  
  # Process all text inputs through dynamic text processor
  capture badge_text
    render 'cc-process-dynamic-text', input_text: section.settings.badge_text
  endcapture
  
  capture heading_text
    render 'cc-process-dynamic-text', input_text: section.settings.heading
  endcapture
  
  capture heading_accent_text
    render 'cc-process-dynamic-text', input_text: section.settings.heading_accent
  endcapture
  
  capture description_text
    render 'cc-process-dynamic-text', input_text: section.settings.description
  endcapture
  
  capture feature_title_text
    render 'cc-process-dynamic-text', input_text: section.settings.feature_text
  endcapture
  
  capture feature_subtitle_text
    render 'cc-process-dynamic-text', input_text: section.settings.feature_subtitle
  endcapture
  
  capture button_label_text
    render 'cc-process-dynamic-text', input_text: section.settings.button_label
  endcapture
  
  capture stat_label_text
    render 'cc-process-dynamic-text', input_text: section.settings.stat_label
  endcapture
  
  capture stat_value_text
    render 'cc-process-dynamic-text', input_text: section.settings.stat_value
  endcapture
  
  assign has_creator_image = false
  if cc_creator and cc_creator.data.value.cc-creator-profile-picture
    assign has_creator_image = true
  endif
  
  assign has_fallback_image = false
  if section.settings.image != blank
    assign has_fallback_image = true
  endif
  
  assign has_any_image = false
  if has_creator_image or has_fallback_image
    assign has_any_image = true
  endif
  
  assign has_stats = false
  if stat_label_text != blank
    assign has_stats = true
  endif
  
  assign show_image_column = false
  if has_any_image or has_stats
    assign show_image_column = true
  endif
  
  # Dynamic text colors based on background
  if section.settings.dynamic_text_colors
    # Determine section background color (only for 'color' type)
    assign section_bg = ''
    if section.settings.background_type == 'color'
      assign section_bg = section.settings.background_color
    endif
    
    # Calculate section background text color (used as fallback)
    capture section_bg_text_color
      if section_bg != blank
        render 'cc-calculate-contrast-color', hex_color: section_bg
      else
        echo '#ffffff'
      endif
    endcapture
    
    # Badge text color
    capture badge_text_color
      render 'cc-calculate-contrast-color', hex_color: section.settings.badge_bg_color, fallback_color: section_bg_text_color
    endcapture
    
    # Main content text colors (heading, description, features)
    assign main_text_color = section_bg_text_color
    
    # Button text color
    capture button_text_color
      render 'cc-calculate-contrast-color', hex_color: section.settings.button_bg_color, fallback_color: section_bg_text_color
    endcapture
    
    # Stat label and value colors
    capture stat_label_color
      render 'cc-calculate-contrast-color', hex_color: section.settings.floating_badge_bg_color, fallback_color: section_bg_text_color
    endcapture
    
    capture stat_value_color
      render 'cc-calculate-contrast-color', hex_color: section.settings.floating_badge_bg_color, fallback_color: section_bg_text_color
    endcapture
  else
    # Use manual colors from settings
    assign badge_text_color = section.settings.badge_text_color
    assign main_text_color = '#ffffff'
    assign button_text_color = section.settings.button_text_color
    assign stat_label_color = section.settings.stat_label_color
    assign stat_value_color = section.settings.stat_value_color
  endif
-%}

