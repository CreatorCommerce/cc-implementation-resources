        }
      });
      
      // Add event listeners to handle video state changes
      video.addEventListener('loadstart', () => {
        // Ensure it's muted when it starts loading
        video.muted = true;
        video.setAttribute('muted', '');
        newButton.textContent = 'ðŸ”‡';
      });
      
    }
