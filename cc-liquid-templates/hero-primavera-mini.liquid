        e.preventDefault();
        e.stopPropagation();
        
        
        // Toggle mute state
        video.muted = !video.muted;
        
        // Update button text
        newButton.textContent = video.muted ? 'ðŸ”‡' : 'ðŸ”Š';
        
        
        // If unmuting, try to play the video (regardless of autoplay status)
        if (!video.muted) {
          video.play().catch(err => {
