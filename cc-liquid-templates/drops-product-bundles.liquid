<script>
document.addEventListener("DOMContentLoaded", function() {
  document.querySelectorAll(".add-bundle-to-cart").forEach(btn => {
    btn.addEventListener("click", function() {
      let products = JSON.parse(this.dataset.products);

      let items = products.map(p => ({
        id: Number(p.id),
        quantity: p.quantity || 1
      }));

      fetch("/cart/add.js", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
          "Accept": "application/json"
        },
        body: JSON.stringify({ items })
      })
      .then(res => {
        if (!res.ok) throw new Error("Add to cart failed");
        return res.json();
      })
      .then(() => fetch("/cart.js").then(r => r.json()))
      .then(cart => {
        // ✅ Reload Cart Drawer
        fetch("/?section_id=cart-drawer")
          .then(r => r.text())
          .then(html => {
            let parser = new DOMParser();
            let doc = parser.parseFromString(html, "text/html");
            let newDrawer = doc.querySelector("#CartDrawer, cart-drawer");

            if (newDrawer) {
              let currentDrawer = document.querySelector("#CartDrawer, cart-drawer");
              if (currentDrawer) {
                currentDrawer.replaceWith(newDrawer);

                if (typeof newDrawer.open === "function") {
                  newDrawer.open(); // Dawn theme
                } else {
                  newDrawer.classList.add("active");
                }
              }
            }
          });

        // ✅ Reload Cart Icon Bubble (so count updates)
        fetch("/?section_id=cart-icon-bubble")
          .then(r => r.text())
          .then(html => {
            let parser = new DOMParser();
            let doc = parser.parseFromString(html, "text/html");
            let newIcon = doc.querySelector(".cart-count-bubble");

            let currentIcon = document.querySelector(".cart-count-bubble");
            if (newIcon) {
              if (currentIcon) {
                // If it already exists, replace it
                currentIcon.replaceWith(newIcon);
              } else {
                // If it doesn’t exist (first product added), inject it into the cart icon wrapper
                let iconWrapper = document.querySelector("a[href='/cart'], .header__icon--cart");
                if (iconWrapper) {
                  iconWrapper.appendChild(newIcon);
                }
              }
            }
          });
      })
      .catch(err => console.error("Error adding bundle:", err));
    });
  });
});
</script>


