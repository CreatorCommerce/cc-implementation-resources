    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 15px;
    line-height: 1.1;
    max-width: 50%;
  }

  .certified-feature-section .bottom-item span {
    text-align: left;
  }

  .certified-feature-section .bottom-item img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    object-position: center;
  }

